%div{style: "font-size: 15px;width:100%; height:100%;"}
  .listitems
    - no_tweets = true
    - @tweets.each do |tweet|
      - no_tweets = false
      %div
        .tweet{data_position: tweet.score, style: "padding-top:10px;"}
          = raw tweet.html_view
          - if tweet.is_mine?(@current_user.flock_user_id)
            %div{style: "font-size: 12px;"}
              %span{style: "opacity: 0.4;"}= tweet.visibility_message
              %span{style: "opacity: 1"}= link_to "change", change_visibility_path(tweet_id: tweet.id)
    - if no_tweets
      %div No tweets
